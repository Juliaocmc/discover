<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-08">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Entrar na SalaRockr.Q</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/room.css">
    <link rel="stylesheet" href="/styles/modal.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
        rel="stylesheet">
    <script src="/script/main.js" defer type="module"></script>

</head>

<body>
    <div id="room" class="content">
        <header>
            <a href="/">
                <img src="/img/logo.svg" alt="Rockt.Q">
            </a>
            <div class="buttons">
                <div class="button outlined" id="room-id" data-id="<%=roomId%>">
                    #<%=roomId%>
                        <img src="/img/copy.svg" alt="Copiar número da sala" srcset="">
                </div>
                <a href="#" class="button">
                    <img src="/img/users-white.svg" alt="Criar Uma Sala">
                    Criar Sala
                </a>
            </div>
        </header>

        <main>
            <section id="question-form">
                <h2> Faça sua pergunta</h2>
                <form action="/question/create/<%=roomId%>" method="POST">
                    <label class="sr-only" for-id="question">O que você quer perguntar?</label>
                    <textarea name="question" id="question" placeholder="O que você quer perguntar?" cols="30"
                        rows="5"></textarea>
                    <footer>
                        <div>
                            <img src="/img/lock.svg" alt="Esta perguntar é anônima">
                            Esta pergunta é anônima
                        </div>
                        <button>
                            Enviar
                        </button>
                    </footer>
                </form>
            </section>
            <section id="questions">
                <h2 class="sr-only">Perguntas da comunidade</h2>
                <div class="questions">

                    <% questions.forEach(question=> { %>
                        <div class="question-wrapper">
                            <div class="questions-content">
                                <div class="user">
                                    <img src="/img/user.svg" alt="Avatar" srcset="">
                                </div>
                                <div class="question">
                                    <p>
                                        <%= question.title %>
                                    </p>

                                </div>
                            </div>
                            <div class="action">
                                <a href="#" class="check" data-id="<%= question.id %>">
                                    <img src="/img/check.svg" alt="Marcar como lida" srcset="">
                                    Marcar como lida
                                </a>
                                <a href="#" class="delete" data-id="<%= question.id %>">
                                    <img src="/img/trash.svg" alt="Excluir" srcset="">
                                    Excluir
                                </a>

                            </div>
                        </div>


                        <% }); %>

                            <% questionsReads.forEach(questionRead=> { %>

                                <div class="question-wrapper read">
                                    <div class="questions-content">
                                        <div class="user">
                                            <img src="/img/user.svg" alt="Avatar" srcset="">
                                        </div>
                                        <div class="question">
                                            <p>
                                                <%= questionRead.title %>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="action">
                                        <a href="#" class="check" data-id="<%= questionRead.id %> ">
                                            <img src="/img/check.svg" alt="Marcar como lida">
                                            Pergunta lida
                                        </a>
                                    </div>
                                </div>
                                <% }); %>

                </div>

            </section>
        </main>

    </div>
    <div class="modal-wrapper">
        <div class="modal">
            <h2>Excluir Pergunta?</h2>
            <p>Tem certeza que você deseja excluir esta pergunta?</p>
            <form action="#" method="POST">
                <label class="sr-only" for-id="password">Digite sua senha de adm</label>
                <input type="password" id="password" name="password" placeholder="Digite sua senha">
                <div class="buttons">
                    <div class="button grey cancel">Cancelar </div>
                    <button class="red delete">Sim, excluir</button>
                </div>
            </form>
        </div>
    </div>


</body>

</html>